<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fieldguide_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:showDividers="none" >

        <nl.imarinelife.lib.utility.RobotoTextView
            android:id="@+id/fieldguide_progressbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/fieldguide_willbeupdated"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp" />

        <ProgressBar
            android:id="@+id/fieldguide_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fieldguide_progressbar_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:progress="0"
            android:paddingBottom="5dp" 
            android:progressDrawable="@drawable/orangeprogress" />
    </RelativeLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:padding="0dp"
        android:textFilterEnabled="true" >
    </ListView>

</LinearLayout>
